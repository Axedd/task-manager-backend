{
  "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
          "./node_modules/@types",
          "./src/@types" // Ensure this is correct
      ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}